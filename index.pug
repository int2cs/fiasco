                            |menu
                    li 
                        a(href="#section4")
                            |blog
                    li 
                        a(href="#")
                            |pages
                    li 
                        a(href="#")
                            |shop
                    li 
                        a(href="#contact")
                            |contact
                .reseaux 
                ul 
                    li
                        a(href="#")  
                            i.fab.fa-facebook-f
                    li 
                        a(href="#") 
                            i.fab.fa-twitter
                    li 
                        a(href="#") 
                            i.fab.fa-instagram

            .vh_content
