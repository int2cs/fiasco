        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(property="og:title" content="Restaurant - The Fiasco")
        meta(property="og:image" content="https://int2cs.github.io/fiasco/assets/img/bg-slider-06.jpg")
        link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css")
        link(rel="stylesheet", href="css/app.css")
        title The Fiasco
    body 
        #head 
            nav
                h2 
                    a(href="#")
                        |The Fiasco
                ul  
                    li 
                        a(href="#")
